<h1>User info</h1>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3>name<%= @user.name %></h3>
  <h3>introduction<%= @user.introduction %></h3>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<h2>Books</h2>
<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <p>Title</p>
    <p><%= book.title %></p>
  <% end %>
  <p>Option</p>
  <p><%= book.body %></p>
</div>
<% end %>